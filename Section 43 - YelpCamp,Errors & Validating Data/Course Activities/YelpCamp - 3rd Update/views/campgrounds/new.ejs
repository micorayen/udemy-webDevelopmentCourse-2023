<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground:</h1>
  <div class="col-6 offset-3 mb-5">
    <form action="/campgrounds" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Title: </label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          placeholder="Enter Title"
          required
        />
        <div class="invalid-feedback">
          Please enter a valid campground title.
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location: </label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          placeholder="campground location"
          required
        />
        <div class="invalid-feedback">
          Please provide a valid campground location.
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image (URL): </label>
        <input
          class="form-control"
          type="text"
          name="campground[image]"
          id="image"
          required
        />
        <div class="invalid-feedback">Please enter a valid image URL.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price: </label>

        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            name="campground[price]"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            required
          />
          <div class="invalid-feedback">
            Please enter a valid price for the campground.
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description: </label>
        <textarea
          class="form-control"
          type="text"
          name="campground[description]"
          id="description"
          cols="10"
          rows="5"
          required
        ></textarea>
        <div class="invalid-feedback">
          Please enter a description for the campground.
        </div>
      </div>

      <div class="mb-3">
        <button class="btn btn-primary">Add Campground</button>
      </div>
    </form>
    <a href="/campgrounds">Back to All Campgrounds</a>
  </div>
</div>
